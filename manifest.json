{
    "manifest_version": 2,
    "name": "Facebook Dark Theme",
    "description": "Dark Theme for Facebook. Also display settings to show or hide default blocks.",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "https://www.facebook.com/*", "http://www.facebook.com/*"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}
